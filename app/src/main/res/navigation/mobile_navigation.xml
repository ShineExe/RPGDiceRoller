    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_simple_rolls">

    <fragment
        android:id="@+id/navigation_simple_rolls"
        android:name="com.example.rpgdiceroller.ui.simpleRolls.SimpleRollsFragment"
        android:label="@string/title_simple_rolls"
