    <fragment
        android:id="@+id/navigation_complex_rolls"
        android:name="com.example.rpgdiceroller.ui.complexRolls.ComplexRollsFragment"
        android:label="@string/title_complex_rolls"
        tools:layout="@layout/fragment_complex_rolls" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.rpgdiceroller.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
